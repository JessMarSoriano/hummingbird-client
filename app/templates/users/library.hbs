<div class="container">
  <div class="row">
    {{! @josh: We need a way to switch between anime/manga }}

    <div class="library-content col-sm-12 col-md-8">
      <h4>My Anime Library</h4>

      {{! @TODO: Hookup Different Layouts }}
      <span class="list-type">
        {{! @TODO: need to do svgs here}}
        <a href="#" {{action (mut layoutType) "grid"}}>Grid</a>
        <a href="#" {{action (mut layoutType) "list"}}>List</a>
      </span>

      {{! @TODO: Hookup with API when available }}
      <section id="library-search" class="library-search">
        <div class="container">
          <div class="row">
            <div class="library-search--wrapper">
              <span class="icon">
                {{svg-jar "search"}}
              </span>
              {{one-way-search query
                update=(action (mut query))
                class="library-search-input"
                placeholder="Search Josh's Library..."
              }}
            </div>
          </div>
        </div>
      </section>

      {{! Header }}
      {{! @TODO: Componentize }}
      <section class="library-result-header clearfix">
        <strong>Showing 25 of 235</strong>
        <div class="library-filters">
          <form class="form-inline">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Per page:</label>
            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
              <option selected>25</option>
              <option value="1">50</option>
              <option value="2">100</option>
              <option value="3">200</option>
            </select>
          </form>
          <form class="form-inline">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Sort by:</label>
            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
              <option selected>Date Watched: Recent First</option>
              <option value="1">Date Watched: Oldest First</option>
              <option value="2">Rating: High to Low</option>
              <option value="3">Rating: Low to High</option>
              <option value="4">Length: Shortest First</option>
              <option value="5">Length: Longest First</option>
            </select>
          </form>
        </div>
      </section>

      {{! Kitsu Library Content Ad }}
      {{#unless session.account.isPro}}
        {{ad-unit slot="8096455061"}}
      {{/unless}}

      {{! Layout }}
      {{component (concat "users/library/library-layout-" layoutType)
        entries=entries
        isLoading=model.taskInstance.isRunning
        onPagination=(route-action "updateNextPage" "taskValue")}}
    </div>

    {{! Sidebar }}
    {{! @TODO: This should be sticky instead of expanding }}
    {{users/library/library-sidebar class="library-sidebar card col-sm-12 col-md-4"
      status=status
      media=media
      onStatusChange=(action (mut status))}}
  </div>
</div>

